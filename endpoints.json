{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },

  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order", "page", "limit"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 7,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },

  "GET /api/articles/:article_id": {
    "description": "serves an object of article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "icellusedkars",
        "title": "Z",
        "article_id": 7,
        "body": "I was hungry.",
        "topic": "mitch",
        "created_at": "2020-01-07T14:08:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 4
      }
    }
  },

  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments on an article",
    "queries": ["page", "limit"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 16,
          "created_at": "2020-04-06T12:17:00.000Z",
          "author": "butter_bridge",
          "body": "Oh, I've got compassion running out of my nose, pal! I'm the Sultan of Sentiment!",
          "article_id": 9
        },
        {
          "comment_id": 17,
          "votes": 20,
          "created_at": "2020-03-14T17:02:00.000Z",
          "author": "icellusedkars",
          "body": "The owls are not what they seem.",
          "article_id": 9
        }
      ]
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "creates a comment in the comments table for a given article",
    "queries": [],
    "body": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "article_id": 4,
        "body": "I loved learning about this",
        "votes": 0,
        "author": "icellusedkars",
        "created_at": "2025-03-11T10:56:33.864Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "patches the votes on an article object",
    "queries": [],
    "body": {
      "inc_votes": "number"
    },
    "exampleResponse": {
      "article": {
        "author": "icellusedkars",
        "title": "Z",
        "article_id": 7,
        "body": "I was hungry.",
        "topic": "mitch",
        "created_at": "2020-01-07T14:08:00.000Z",
        "votes": 20,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 3
      }
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment",
    "queries": [],
    "exampleResponse": {}
  },

